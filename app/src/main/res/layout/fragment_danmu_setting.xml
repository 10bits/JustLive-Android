<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryTextColor"
        android:textSize="12sp"
        android:text="弹幕设置"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="显示区域"
            android:gravity="center"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/showAreaSlider"
            android:valueFrom="0"
            android:valueTo="3"
            android:stepSize="1"
            android:layout_height="match_parent"
            android:layout_width="160dp"/>
        <TextView
            android:id="@+id/showAreaText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="1/4屏"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="不透明度"
            android:gravity="center"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/alphaSlider"
            android:valueFrom="20"
            android:valueTo="100"
            android:layout_height="match_parent"
            android:layout_width="160dp"/>
        <TextView
            android:id="@+id/alphaText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="50%"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="弹幕速度"
            android:gravity="center"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/speedSlider"
            android:valueFrom="0"
            android:valueTo="3"
            android:stepSize="1"
            android:layout_height="match_parent"
            android:layout_width="160dp"/>
        <TextView
            android:id="@+id/speedText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="适中"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="弹幕字号"
            android:gravity="center"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/sizeSlider"
            android:valueFrom="0.50"
            android:valueTo="2.00"
            android:layout_height="match_parent"
            android:layout_width="160dp"/>
        <TextView
            android:id="@+id/sizeText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="1.00"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="描边宽度"
            android:gravity="center"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/borderSlider"
            android:valueFrom="0.50"
            android:valueTo="2.50"
            android:layout_height="match_parent"
            android:layout_width="160dp"/>
        <TextView
            android:id="@+id/borderText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="1.00"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="同屏密度"
            android:gravity="center"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/miDuSlider"
            android:valueFrom="0"
            android:valueTo="3"
            android:stepSize="1"
            android:layout_height="match_parent"
            android:layout_width="160dp"/>
        <TextView
            android:id="@+id/miDuText"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/cardBackgroundColor"
            android:textSize="12sp"
            android:text="适中"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>